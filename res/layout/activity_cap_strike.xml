<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu1" >
    
    <LinearLayout  
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="90dp"  
        android:layout_y="103dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background0"
            android:src="@drawable/start" />

        <ImageButton
            android:id="@+id/choose_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background0"
            android:src="@drawable/choose_stage" />
        
        <ImageButton
            android:id="@+id/challenge_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background0"
            android:src="@drawable/challengemode" />  

        <ImageButton
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background0"
            android:src="@drawable/about" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background0"
            android:src="@drawable/exit" />
    </LinearLayout>

   

    <ImageView
        android:id="@+id/bottle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="28dp"
        android:layout_y="220dp"/>

    <ImageView
        android:id="@+id/xiaoqiang_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="188dp"
        android:src="@drawable/xiaoqiang" />

    
    <ImageView
        android:id="@+id/cap_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="210dp"
        android:src="@drawable/cap" />
    
     <ImageView
        android:id="@+id/running_xiaoqiang_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="140dp" />

    

</AbsoluteLayout>