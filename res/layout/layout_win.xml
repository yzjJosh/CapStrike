<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/win_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/win_character" />

        <TextView
            android:id="@+id/win_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="击杀数量:"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/win_xq_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiaoqiang_normal_1" />

            <TextView
                android:id="@+id/win_xq_normal_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="×0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/win_xq_magic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/xiaoqiang_magic_1" />

            <TextView
                android:id="@+id/win_xq_magic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="×0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/win_xq_rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/xiaoqiang_rare_1" />

            <TextView
                android:id="@+id/win_xq_rare_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="×0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/win_xq_unique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/xiaoqiang_unique_1" />

            <TextView
                android:id="@+id/win_xq_unique_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="×0"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/win_hit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="命中率:0%"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/win_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="用时:01:00"
            android:textColor="@color/white"
            android:textSize="20dp" />
        
        <TextView
                    android:id="@+id/local_highest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="最高分:99999"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/win_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="得分:99999"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
      
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/win_to_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/small_background0"
                android:src="@drawable/icon_to_menu" />

            <ImageButton
                android:id="@+id/win_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/small_background0"
                android:src="@drawable/icon_restart" />

            <ImageButton
                android:id="@+id/win_next_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/small_background0"
                android:src="@drawable/icon_next_stage" />
            
             <ImageButton
                android:id="@+id/win_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/small_background0"
                android:src="@drawable/icon_exit" /> 
             
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"        
            android:gravity="center"
            android:orientation="horizontal" >
        
                  <ImageView
                    android:id="@+id/win_new_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/new_record"
                    android:visibility="gone" />
                  
         </LinearLayout>
         
</FrameLayout>